<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wade8.firebasetest.LoginActivity">

    <EditText
        android:id="@+id/email_ET"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="156dp"
        android:hint="帳號"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/signup_BT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:onClick="SignUP"
        android:text="signup"
        app:layout_constraintStart_toStartOf="@+id/password_ET"
        app:layout_constraintTop_toBottomOf="@+id/password_ET"/>

    <Button
        android:id="@+id/login_BT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:onClick="Login"
        android:text="login"
        app:layout_constraintStart_toEndOf="@+id/signup_BT"
        app:layout_constraintTop_toTopOf="@+id/signup_BT" />

    <Button
        android:id="@+id/sendarticle_BT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:onClick="AddArticleTest"
        android:text="sendA"
        app:layout_constraintTop_toBottomOf="@+id/login_BT" />

    <EditText
        android:id="@+id/password_ET"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:hint="87"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/email_ET"
        app:layout_constraintTop_toBottomOf="@+id/email_ET" />

</android.support.constraint.ConstraintLayout>
